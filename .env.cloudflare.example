# Cloudflare Environment Variables Example
# Copy this file to .env.local for local development
# These variables are automatically set in Cloudflare Pages deployment

# =============================================================================
# BUILD-TIME VARIABLES (for Cloudflare Pages build)
# =============================================================================

# Enable Cloudflare Pages mode
CF_PAGES=1

# Node.js version for build
NODE_VERSION=18

# NPM version for build
NPM_VERSION=9

# =============================================================================
# RUNTIME VARIABLES (for Next.js application)
# =============================================================================

# Worker API endpoint (update after deploying worker)
NEXT_PUBLIC_WORKER_URL=https://leadership-legacy-worker.YOUR_SUBDOMAIN.workers.dev
NEXT_PUBLIC_API_BASE=https://leadership-legacy-worker.YOUR_SUBDOMAIN.workers.dev

# Environment
NODE_ENV=production

# =============================================================================
# CLOUDFLARE ACCOUNT INFORMATION (for wrangler CLI)
# =============================================================================

# Cloudflare Account ID (get from dashboard)
# Update this in wrangler.toml after getting it from:
# https://dash.cloudflare.com → Workers & Pages → Account ID
# CLOUDFLARE_ACCOUNT_ID=your-account-id-here

# Cloudflare API Token (for CI/CD only - DO NOT commit!)
# Create at: https://dash.cloudflare.com/profile/api-tokens
# CLOUDFLARE_API_TOKEN=your-api-token-here

# =============================================================================
# RESOURCE IDS (for wrangler.toml - update after creation)
# =============================================================================

# D1 Database ID
# Get from: wrangler d1 create leadership-legacy-db
# D1_DATABASE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# KV Namespace ID
# Get from: wrangler kv:namespace create "LEADERSHIP_CONFIG"
# KV_NAMESPACE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# OPTIONAL: GITHUB INTEGRATION (for higher API rate limits)
# =============================================================================

# GitHub Personal Access Token (store in KV, not here!)
# Create at: https://github.com/settings/tokens
# This should be stored in KV using:
# wrangler kv:key put --namespace-id=$KV_ID "GITHUB_TOKEN" "your-token"
# GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# =============================================================================

# Enable analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Enable feature flags
NEXT_PUBLIC_FEATURE_FLAGS_ENABLED=true

# =============================================================================
# LOCAL DEVELOPMENT OVERRIDES
# =============================================================================

# For local development, you can run wrangler dev to test worker locally
# NEXT_PUBLIC_WORKER_URL=http://localhost:8787
# NEXT_PUBLIC_API_BASE=http://localhost:8787
